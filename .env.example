# Database Configuration
# PostgreSQL: postgresql://webhook_user:webhook_pass@whook_postgres:5432/webhooks_db
# MariaDB:    mysql+pymysql://webhook_user:webhook_pass@whook_mariadb:3306/webhooks_db
DATABASE_URL=mysql+pymysql://webhook_user:webhook_pass@whook_mariadb:3306/webhooks_db

# MariaDB password (used by docker-compose)
MYSQL_PASSWORD=webhook_pass
MYSQL_ROOT_PASSWORD=rootpass

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Application Configuration
APP_HOST=0.0.0.0
APP_PORT=5000
DEBUG=False

# Security
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=change-this-secret-key-in-production

# Google OAuth (SSO) Configuration
# Get these from Google Cloud Console: https://console.cloud.google.com/
# See GOOGLE_OAUTH_SETUP.md for detailed instructions
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
REDIRECT_URI=http://localhost:5000/auth/callback

# Data Retention (days)
WEBHOOK_RETENTION_DAYS=30

# Performance Settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40
